<?xml version="1.0" encoding="utf-8"?>
<com.lookballs.pictureselector.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/picture_color_20000000"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/camera_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/picture_ic_camera" />

    <TextView
        android:id="@+id/camera_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/camera_iv"
        android:layout_centerHorizontal="true"
        android:text="@string/picture_text_take_picture"
        android:textColor="@color/picture_color_999999"
        android:textSize="15dp" />
</com.lookballs.pictureselector.widget.SquareRelativeLayout>