    <style name="WindowStyle">
        <item name="android:windowEnterAnimation">@anim/picture_window_in</item>
        <item name="android:windowExitAnimation">@anim/picture_window_out</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--给View添加点击效果，Android 5.0以上是波纹效果，5.0以下是普通的点击效果（简言之，跟系统默认点击效果一致）-->
    <style name="ClickableImageView">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <declare-styleable name="MaxHeightRecyclerView">
