<resources>
    <!--默认样式，注意每一项都不能少-->
    <style name="picture.default.style" parent="Theme.AppCompat.Light.NoActionBar">
        <!--是否开启沉浸式状态栏-->
        <item name="picture.isImmersionbarEnable">true</item>
        <!--勾选样式模式true开启数字勾选样式false开启图标勾选样式-->
        <item name="picture.checkNumMode">false</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder.checkedDot.style">@drawable/picture_shape_oval_orange</item>

        <!--图片列表-标题栏/状态栏背景色-->
        <item name="picture.ps.titleBg.color">@color/picture_color_393A3E</item>
        <!--图片列表-勾选样式-->
        <item name="picture.ps.checked.style">@drawable/picture_selector_cb_white</item>
        <!--图片列表-返回键图标-->
        <item name="picture.ps.leftBack.icon">@drawable/picture_ic_back_white</item>
        <!--图片列表-标题文字颜色-->
        <item name="picture.ps.titleText.color">@color/picture_color_FFFFFF</item>
        <!--图片列表-已完成文字颜色-->
        <item name="picture.ps.completeText.style">@drawable/picture_selector_color_white</item>
        <!--图片列表-底部背景色-->
        <item name="picture.ps.bottomBg.color">@color/picture_color_393A3E</item>
        <!--图片列表-底部文件夹上下拉箭头-->
        <item name="picture.ps.arrow.style">@drawable/picture_selector_arrow_white</item>
        <!--图片列表-底部文件夹文字颜色-->
        <item name="picture.ps.bottomText.color">@color/picture_color_FFFFFF</item>
        <!--图片列表-预览文字颜色-->
